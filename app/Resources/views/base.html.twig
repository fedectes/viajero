
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>{% block title %}{% endblock %} | Viajero</title>
    {% block stylesheets %}{% endblock %}
    <link rel="shortcut icon" href="{{ asset('bundles/paquete/images/logo.ico') }}" />
    <script src="{{ asset('js/jquery-1.7.2.min.js') }}"></script>    
</head>

{% block javascripts %}{% endblock %}
<body id="{% block id '' %}">
    <div id="contenedor">
    {% block body %}{% endblock %}
            
    <footer>
        &copy; {{ 'now' | date('Y') }} - Viajero
        <a href="#">Ayuda</a>
        <a href="#">Contacto</a>
        <a href="#">Privacidad</a>
        <a href="#">Sobre nosotros</a>
        
        {% set locale = app.request.locale %}
        <section id="idioma">
        {% if locale == 'es' %}
            <span>Español</span> -<a href="{{ path('inicio', { '_locale': 'en' }) }}">English</a>
        {% elseif locale == 'en' %}
            <a href="{{ path('inicio', { '_locale': 'es' }) }}">Español</a> - <span>English</span>
        {% endif %}
        </section>
    </footer>
            
    </div>
</body>
</html>
