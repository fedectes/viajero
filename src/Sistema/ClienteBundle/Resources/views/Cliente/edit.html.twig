{% extends '::frontend.html.twig' %}

{% block title %}Cliente{% endblock %}
{#{% block id 'portada' %}#}

{% block article %}
    <h1>Editar Cliente</h1>

    <form action="{{ path('cliente_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {#{{ form_widget(edit_form) }}#}
        
            {{ form_errors(edit_form) }}  
            <div>
                {{ form_label(edit_form.dni, 'Nro.DNI') }}
                {{ form_widget(edit_form.dni) }}
                {{ form_errors(edit_form.dni) }}
            </div>
                   
            <div>
                {{ form_label(edit_form.nombrec, 'Nombre:') }}
                {{ form_widget(edit_form.nombrec) }}
                {{ form_errors(edit_form.nombrec) }}
            </div>
            <div>
                {{ form_label(edit_form.apellidoc, 'Apellido:') }}
                {{ form_widget(edit_form.apellidoc) }}
                {{ form_errors(edit_form.apellidoc) }}
            </div>
            <div>
                {{ form_label(edit_form.direccion, 'Dirección:') }}
                {{ form_widget(edit_form.direccion) }}
                {{ form_errors(edit_form.direccion) }}
            </div>
            <div>
                {{ form_label(edit_form.telefono, 'Teléfono:') }}
                {{ form_widget(edit_form.telefono) }}
                {{ form_errors(edit_form.telefono) }}
            </div>
            <div>
                {{ form_label(edit_form.fecha_nacim, 'Fecha de Nacimiento:') }}
                {{ form_widget(edit_form.fecha_nacim) }}
                {{ form_errors(edit_form.fecha_nacim) }}
            </div>
            <div>
                {{ form_label(edit_form.email, 'E-mail:') }}
                {{ form_widget(edit_form.email) }}
                {{ form_errors(edit_form.email) }}
            </div>
            {{ form_rest(edit_form) }}
        <p>
            <button type="submit">Guardar</button>
        </p>
    </form>

        <ul class="record_actions">
    <li>
        <a href="{{ path('cliente') }}">
            Ir a Listar
        </a>
    </li>
    <li>
        <form action="{{ path('cliente_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Eliminar</button>
        </form>
    </li>
</ul>
{% endblock %}
 
