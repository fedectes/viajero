{% extends '::backend.html.twig' %}

{% block title %}Venta{% endblock %}
{#{% block id 'portada' %}#}

{% block article %}
    <h1>Editar Venta</h1>

    <form action="{{ path('venta_actualizar', { 'id': entity.id }) }}" method="post" {{ form_enctype(editar_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(editar_form) }}
        <p>
            <button type="submit">Guardar</button>
        </p>
    </form>

    <ul class="record_actions">
        <li>
            <a href="{{ path('ventas_backend') }}">Volver a Lista</a>
        </li>
        <li>
            <form action="{{ path('venta_delete', { 'id': entity.id }) }}" method="post">
                <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(eliminar_form) }}
                <button type="submit">Eliminar</button>
            </form>
        </li>
    </ul>
{% endblock %}