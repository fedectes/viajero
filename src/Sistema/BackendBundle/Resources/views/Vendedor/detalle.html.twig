{% extends '::backend.html.twig' %}

{% block title %}Vendedor{% endblock %}
{#{% block id 'portada' %}#}

{% block article %}
    <h1>Vendedor: {{ entity.apellido }}, {{ entity.nombre }}</h1>

    <table class="record_properties" border=1>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>DNI</th>
                <td>{{ entity.dni }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ entity.nombre }}</td>
            </tr>
            <tr>
                <th>Apellido</th>
                <td>{{ entity.apellido }}</td>
            </tr>
            <tr>
                <th>Direcci√≥n</th>
                <td>{{ entity.direccion }}</td>
            </tr>
            <tr>
                <th>Fecha Nacimiento</th>
                <td>{{ entity.fechanacimiento|localizeddate('long', 'none') }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ entity.email }}</td>
            </tr>
        </tbody>
    </table>

<ul class="record_actions">
    <li>
        <a href="{{ path('vendedor') }}">
            Volver a lista
        </a>
    </li>
    <li>
        <form action="{{ path('vendedor_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(borrar_form) }}
            <button type="submit">Eliminar</button>
        </form>
    </li>
</ul>
{% endblock %}