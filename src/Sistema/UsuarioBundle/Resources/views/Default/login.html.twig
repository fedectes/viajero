{% extends '::frontend.html.twig' %}

{% block title %}Inicio de Sesion{% endblock %}
{% block id 'login' %}

{% block article %}
<section id="entrar">
    <h1>{{ "Inicio de Sesion" }}</h1>
    
    {% if error %}
        <div>{{ error.message }}</div>
    {% endif %}

    <form action="{{ path('login_check') }}" method="post">
        <label for="username">Email: </label>
        <input type="text" id="username" name="_username" value="{{ last_username }}" />

        <label for="password">Contraseña: </label>
        <input type="password" id="password" name="_password" />
        
        <input type="checkbox" id="no_cerrar" name="_remember_me" checked />
        <label for="no_cerrar">No cerrar Sesión</label>

        <input type="submit" name="login" value="Iniciar" />
    </form>
</section>
<section id="registrar">
    <a class="boton" href="{{ path('usuario_registro') }}">{{ "Nuevo Vendedor" }}</a>
</section>
{% endblock %}

{% block aside %}{% endblock %}        